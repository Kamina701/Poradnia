@page
@model SRP.Areas.Identity.Pages.Account.Manage.EditProfileModel
@{
    ViewData["Title"] = "Dane Twojego profilu:";
    ViewData["ActivePage"] = ManageNavPages.Index;
}
<h2>@ViewData["Title"]</h2>
<partial name="_StatusMessage" for="StatusMessage" />
<div class="row">
    <div class="col-md-8" style="float:none;margin:auto;">
        <form id="profile-form" method="post" class="row g-6">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <div class="form-group">
                    <label asp-for="Input.Email"></label>
                    <input asp-for="Input.Email" class="form-control" disabled id="username" placeholder="@Model.Email" />
                </div>
                <a style="font-weight:bold">Do edycji:</a>
                <div class="form-group">
                    <label asp-for="Input.FirstName"></label>
                    <input asp-for="Input.FirstName" class="form-control" placeholder="@Model.FirstName" />
                    <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.LastName"></label>
                    <input asp-for="Input.LastName" class="form-control" placeholder="@Model.LastName" />
                    <span asp-validation-for="Input.LastName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.Phone"></label>
                    <input asp-for=@Model.Phone class="form-control" placeholder="@Model.Phone" />
                    <span asp-validation-for="Input.Phone" class="text-danger"></span>
                </div>
                <div class="mt-3">
                    <button type="submit" class="btn btn-outline-warning">Zapisz</button>
                    <a href="/Identity/Account/Manage/Index" class="btn btn-outline-warning">Powrót</a>
                </div>
            </div>
        </form>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}