@page
@model LoginModel

@{
    ViewData["Title"] = "Zaloguj się";
}
<style>
    ul {
        padding: 0;
    }

    li {
        list-style: none;
    }
</style>
<div class="text-center loginDiv">
    <img src="/images/Logo1.png" class="d-block mx-auto" height="96" width="96" />
    <h4 class="m-4"><strong>@ViewData["Title"]</strong></h4>
    <div asp-validation-summary="All" class="text-danger">
    </div>

    <form id="account" method="post">
        <div class="mb-2">
            <label asp-for="Input.Username" class="form-label"></label>
            <input asp-for="Input.Username" class="form-control" />
            <span asp-validation-for="Input.Username" class="text-danger"></span>
        </div>
        <div class="mb-2">
            <label asp-for="Input.Password" class="form-label"></label>
            <input asp-for="Input.Password" class="form-control" />
            <span asp-validation-for="Input.Password" class="text-danger"></span>
        </div>
        <div class="checkbox mt-3">
            <label asp-for="Input.RememberMe">
                <input asp-for="Input.RememberMe" />
                @Html.DisplayNameFor(m => m.Input.RememberMe)
            </label>
        </div>
        <button type="submit" class="btn btn-outline-custom buttonLogin w-100 mt-3">Zaloguj</button>
        <div>
            <p class="mb-0 mt-3 text-end">
                Nie masz konta? <a class="text-info" asp-page="/Account/Register" asp-route-returnUrl="@Model.ReturnUrl">Kliknij tutaj aby je założyć.</a>
            </p>
        </div>
    </form>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}